<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/exit"
        android:layout_width="55dp"
        android:layout_height="40dp"
        android:layout_marginTop="14.5dp">

        <Button
            android:layout_width="33.56dp"
            android:layout_height="21.53dp"
            android:layout_centerInParent="true"
            android:background="@drawable/back_arrow"
            android:clickable="false" />
    </RelativeLayout>

    <com.midnight.healthcare.Text
        android:id="@+id/selectYourSkills"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Select your skills"
        android:textColor="@color/appBlue"
        android:textSize="18dp" />

    <com.midnight.healthcare.Btn
        android:id="@+id/skill_done"
        android:layout_width="74.52dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/round_blue"
        android:text="Done"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />

    <!--<LinearLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_above="@+id/skill_other"-->
    <!--android:layout_alignParentStart="true"-->
    <!--android:layout_below="@+id/selectYourSkills">-->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/skill_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/skill_other"
        android:layout_below="@+id/selectYourSkills" />
    <!--</LinearLayout>-->

    <com.midnight.healthcare.Btn
        android:id="@+id/skill_other"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@drawable/round_blue"
        android:text="Add skills"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />
</RelativeLayout>

