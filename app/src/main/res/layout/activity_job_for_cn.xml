<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.midnight.healthcare.Activity.JobForCNA">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/exit"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:layout_marginTop="21.5dp">

                <Button
                    android:layout_width="33.56dp"
                    android:layout_height="21.53dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/back_arrow"
                    android:clickable="false" />
            </RelativeLayout>

            <LinearLayout
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.midnight.healthcare.Text
                    android:id="@+id/title_job"
                    android:layout_width="251dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="Certified Nursing Assistant - Full Time Days - Kindred Hospital Palm Beaches, FL"
                    android:textColor="@color/blueHighlighted"
                    android:textSize="20dp" />

                <com.midnight.healthcare.Text
                    android:id="@+id/location_job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="Palm Beaches, FL"
                    android:textColor="#95989A"
                    android:textSize="18dp" />

                <com.midnight.healthcare.Text
                    android:id="@+id/distance_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_blue_text"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:singleLine="true"
                    android:text="0.6 mi"
                    android:textColor="@android:color/white"
                    android:textSize="16dp" />


                <RatingBar
                    android:id="@+id/rb"
                    style="@style/StarRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:numStars="5"
                    android:stepSize="0.5" />

                <com.midnight.healthcare.Btn
                    android:id="@+id/rate"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_blue"
                    android:text="Rate"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#E1EFFA" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F8FBFE"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <com.midnight.healthcare.Text
                            android:id="@+id/cell_job_info"
                            android:layout_width="212dp"
                            android:layout_height="wrap_content"
                            android:text="Hourly - Entry Level ($) - Est. Time: Less than 1 month, Less than 10 hrs/week"
                            android:textSize="12dp" />


                        <com.midnight.healthcare.Text
                            android:id="@+id/cell_job_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="$15/h"
                            android:textColor="#25B176"
                            android:textSize="20dp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="327dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <com.midnight.healthcare.BtnHelvetica
                            android:id="@+id/job_cell_s"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/s"
                            android:enabled="false"
                            android:text="S"
                            android:textColor="@color/textColor"
                            android:textSize="16dp" />

                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#E1EFFA" />

                        <com.midnight.healthcare.BtnHelvetica
                            android:id="@+id/job_cell_m"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@android:color/white"
                            android:enabled="false"
                            android:text="M"
                            android:textColor="@color/textColor"
                            android:textSize="16dp" />

                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#E1EFFA" />

                        <com.midnight.healthcare.BtnHelvetica
                            android:id="@+id/job_cell_t"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@android:color/white"
                            android:enabled="false"
                            android:text="T"
                            android:textColor="@color/textColor"
                            android:textSize="16dp" />

                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#E1EFFA" />

                        <com.midnight.healthcare.BtnHelvetica
                            android:id="@+id/job_cell_w"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@android:color/white"
                            android:enabled="false"
                            android:text="W"
                            android:textColor="@color/textColor"
                            android:textSize="16dp" />

                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#E1EFFA" />

                        <com.midnight.healthcare.BtnHelvetica
                            android:id="@+id/job_cell_th"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@android:color/white"
                            android:enabled="false"
                            android:text="TH"
                            android:textColor="@color/textColor"
                            android:textSize="16dp" />

                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#E1EFFA" />

                        <com.midnight.healthcare.BtnHelvetica
                            android:id="@+id/job_cell_f"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@android:color/white"
                            android:enabled="false"
                            android:text="F"
                            android:textColor="@color/textColor"
                            android:textSize="16dp" />

                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#E1EFFA" />

                        <com.midnight.healthcare.BtnHelvetica
                            android:id="@+id/job_cell_sa"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/sa"
                            android:enabled="false"
                            android:text="Sa"
                            android:textAllCaps="false"
                            android:textColor="@color/textColor"
                            android:textSize="16dp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E1EFFA"></LinearLayout>

                <com.midnight.healthcare.Text
                    android:id="@+id/cell_job_desc"
                    android:layout_width="328dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:text="Certified Nursing Assistant - Full Time Days - Kindred Hospital Palm Beaches, FL ( Job Number: 272175 ) Description Interested in a career with Kindred Hospitals – a place where you can put your heart into and…"
                    android:textColor="@android:color/black"
                    android:textSize="14dp" />

                <com.midnight.healthcare.Btn
                    android:id="@+id/apply_for_job"
                    android:layout_width="202.52dp"
                    android:layout_height="52dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/round_blue"
                    android:text="Apply"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/waitingForAnAnswer"
                    android:layout_width="202.52dp"
                    android:layout_height="52dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/white"
                    android:visibility="gone">

                    <com.midnight.healthcare.Text
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Waiting for an answer"
                        android:textColor="@color/agreementNotHighlighted"
                        android:textSize="18dp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/give_answer"
                    android:layout_width="match_parent"
                    android:layout_height="41.62dp"
                    android:visibility="gone">

                    <com.midnight.healthcare.Btn
                        android:id="@+id/accept"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_blue"
                        android:text="Accept"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="18dp" />

                    <com.midnight.healthcare.Btn
                        android:id="@+id/decline"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_blue_white"
                        android:text="Decline"
                        android:textAllCaps="false"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/after_answer"
                    android:layout_width="match_parent"
                    android:layout_height="41.6dp"
                    android:visibility="gone">

                    <com.midnight.healthcare.Btn
                        android:id="@+id/sendMessage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_blue"
                        android:clickable="true"
                        android:text="Send a message"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="18dp" />

                    <com.midnight.healthcare.Btn
                        android:id="@+id/optionsButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_blue_options"
                        android:text="Options"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/declinedLayout"
                    android:layout_width="match_parent"
                    android:layout_height="41.6dp"
                    android:visibility="gone">

                    <com.midnight.healthcare.Btn
                        android:id="@+id/declined"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_blue_white"
                        android:clickable="true"
                        android:text="Declined"
                        android:textAllCaps="false"
                        android:textColor="#FF6262"
                        android:textSize="18dp" />

                    <com.midnight.healthcare.Btn
                        android:id="@+id/optionsButton2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_blue_options"
                        android:text="Options"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="18dp" />
                </LinearLayout>

                <com.midnight.healthcare.Btn
                    android:id="@+id/accepted"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_gree"
                    android:text="Accepted"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    android:visibility="gone" />

                <com.midnight.healthcare.Text
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:text="Send a message"
                    android:textColor="@color/textColor"
                    android:textSize="18dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true">

                    <EditText
                        android:id="@+id/mess"
                        android:layout_width="match_parent"
                        android:layout_height="173dp"
                        android:background="@drawable/round_blue_light"
                        android:gravity="start"
                        android:hint="Tap here to ask a question about
this job…"
                        android:paddingEnd="5dp"
                        android:paddingStart="20dp"
                        android:paddingTop="15dp"
                        android:textColor="@color/appBlue"
                        android:textColorHint="@color/textColor"
                        android:textSize="18dp" />

                    <com.midnight.healthcare.Btn
                        android:id="@+id/sned_mess"
                        android:layout_width="75dp"
                        android:layout_height="38dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/round_blue"
                        android:text="Send"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/reportButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="15dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="10.15dp"
                        android:layout_height="14.34dp"
                        android:src="@drawable/flag" />

                    <com.midnight.healthcare.Text
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="Report this job"
                        android:textColor="@color/agreementNotHighlighted"
                        android:textSize="12dp" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
