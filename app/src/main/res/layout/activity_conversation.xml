<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.midnight.healthcare.Activity.MessagesActivity">

    <RelativeLayout
        android:layout_width="55dp"
        android:layout_height="40dp"
        android:id="@+id/exit"
        android:layout_marginTop="21.5dp">
        <Button
            android:layout_width="33.56dp"
            android:layout_height="21.53dp"
            android:clickable="false"
            android:layout_centerInParent="true"
            android:background="@drawable/back_arrow"
            />
    </RelativeLayout>

    <com.midnight.healthcare.Text

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text=""
        android:id="@+id/partnerName"
        android:textSize="18dp"
        android:textColor="@color/blueHighlighted"
        android:layout_marginTop="30dp"/>

    <ListView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/conversation_list"
        android:layout_marginTop="75dp"
        android:stackFromBottom="true"
        android:transcriptMode="normal"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:layout_marginBottom="70dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E1EFFA">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <com.midnight.healthcare.editText
                android:id="@+id/text_message"
                android:paddingLeft="15dp"
                android:textColorHint="@color/textColor"
                android:textSize="15dp"
                android:textColor="@color/appBlue"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Type a messageâ€¦"
                android:layout_weight="1"/>
            <com.midnight.healthcare.Btn
                android:layout_marginEnd="5dp"
                android:id="@+id/send_text_message"
                android:layout_width="74.52dp"
                android:textSize="14dp"
                android:layout_height="38dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/round_blue"
                android:text="Send"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                />
        </LinearLayout>
    </LinearLayout>





</RelativeLayout>
