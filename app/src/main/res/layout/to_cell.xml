<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:padding="10dp"
    android:layout_marginBottom="10dp">

    <com.midnight.healthcare.Text
        android:id="@+id/mess_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="5:13pm"
        android:layout_marginEnd="5dp"
        android:textColor="@color/textColor"
        android:textSize="12dp"/>

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/round_blue_light_to">
    <com.midnight.healthcare.Text
        android:gravity="start"
        android:textColor="@color/blueHighlighted"
        android:id="@+id/mess_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comon jonyy this shit is so easy sweetheart"
        android:textSize="16dp"/>
</LinearLayout>

</LinearLayout>