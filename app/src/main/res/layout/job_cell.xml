<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E1EFFA"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8FBFE"
        android:orientation="vertical"
        android:padding="15dp">

        <com.midnight.healthcare.Text
            android:id="@+id/cell_job_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Certified Nursing Assistant - Full Time Days - Kindred Hospital Palm Beaches, FL"
            android:textColor="@color/blueHighlighted"
            android:textSize="20dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RatingBar
                android:isIndicator="true"
                android:id="@+id/rb"
                style="@style/StarRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp" />

            <com.midnight.healthcare.Text
                android:id="@+id/rating_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/rb"
                android:text="4.5"
                android:textColor="@color/blueHighlighted"
                android:textSize="25sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <com.midnight.healthcare.Text
                android:id="@+id/cell_job_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_blue"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:layout_centerVertical="true"
                android:text="Riviera Beach, Florida"
                android:textColor="@android:color/white"
                android:textSize="16dp" />

            <com.midnight.healthcare.Text
                android:id="@+id/cell_job_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="$15/h"
                android:textColor="#25B176"
                android:textSize="20dp" />
        </RelativeLayout>

        <com.midnight.healthcare.Text
            android:id="@+id/cell_job_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Hourly - Entry Level ($) - Est. Time: Less than 1 month, Less than 10 hrs/week"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="327dp"
            android:layout_height="24dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <com.midnight.healthcare.BtnHelvetica
                android:id="@+id/job_cell_s"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/s"
                android:enabled="false"
                android:text="S"
                android:textColor="@color/textColor"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E1EFFA" />

            <com.midnight.healthcare.BtnHelvetica
                android:id="@+id/job_cell_m"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:enabled="false"
                android:text="M"
                android:textColor="@color/textColor"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E1EFFA" />

            <com.midnight.healthcare.BtnHelvetica
                android:id="@+id/job_cell_t"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:enabled="false"
                android:text="T"
                android:textColor="@color/textColor"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E1EFFA" />

            <com.midnight.healthcare.BtnHelvetica
                android:id="@+id/job_cell_w"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:enabled="false"
                android:text="W"
                android:textColor="@color/textColor"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E1EFFA" />

            <com.midnight.healthcare.BtnHelvetica
                android:id="@+id/job_cell_th"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:enabled="false"
                android:text="TH"
                android:textColor="@color/textColor"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E1EFFA" />

            <com.midnight.healthcare.BtnHelvetica
                android:id="@+id/job_cell_f"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:enabled="false"
                android:text="F"
                android:textColor="@color/textColor"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E1EFFA" />

            <com.midnight.healthcare.BtnHelvetica
                android:id="@+id/job_cell_sa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/sa"
                android:enabled="false"
                android:text="Sa"
                android:textAllCaps="false"
                android:textColor="@color/textColor"
                android:textSize="16dp" />
        </LinearLayout>

        <com.midnight.healthcare.Text
            android:id="@+id/cell_job_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Certified Nursing Assistant - Full Time Days - Kindred Hospital Palm Beaches, FL ( Job Number: 272175 ) Description Interested in a career with Kindred Hospitals – a place where you can put your heart into and…"
            android:textColor="@android:color/black"
            android:textSize="14dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="20dp"
        android:background="#E1EFFA"></LinearLayout>

</LinearLayout>