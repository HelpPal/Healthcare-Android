<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:id="@+id/exit"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_marginTop="21.5dp">

            <Button
                android:layout_width="33.56dp"
                android:layout_height="21.53dp"
                android:layout_centerInParent="true"
                android:background="@drawable/back_arrow"
                android:clickable="false" />
        </RelativeLayout>

        <com.midnight.healthcare.TextBold
            android:id="@+id/registrationFirstMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/registrationHeader"
            android:layout_alignEnd="@+id/registrationHeader"
            android:text="First Month Free!!!"
            android:textColor="@color/appBlue"
            android:textSize="28dp" />

        <com.midnight.healthcare.TextBold
            android:id="@+id/registrationHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Registration: Step 1"
            android:textColor="@color/appBlue"
            android:textSize="28dp" />

        <com.midnight.healthcare.Text
            android:id="@+id/registrationHeader2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="107dp"
            android:text="Choose your account type"
            android:textColor="@color/appBlue"
            android:textSize="18dp" />

        <com.midnight.healthcare.TextHelvetica
            android:layout_width="155dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="145dp"
            android:background="@drawable/round_blue_light2"
            android:gravity="center"
            android:text="$9.99/month"
            android:textColor="@color/appBlue"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="210dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/register_individul"
                    android:layout_width="48.64dp"
                    android:layout_height="159.42dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="18dp"
                    android:src="@drawable/register_individul" />

                <com.midnight.healthcare.Text
                    android:id="@+id/individualText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Individual hiring"
                    android:textColor="@android:color/black"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/register_professional"
                    android:layout_width="75.85dp"
                    android:layout_height="179.16dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/register_profession" />

                <com.midnight.healthcare.Text
                    android:id="@+id/professionalText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Professional CNA"
                    android:textColor="@android:color/black"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>

        <com.midnight.healthcare.Text
            android:id="@+id/registration_step1_text"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="60dp"
            android:gravity="center"
            android:text="Tap on the type of account you want to create"
            android:textColor="@color/textColor"
            android:textSize="20dp" />

        <Button
            android:id="@+id/step1_next"
            android:layout_width="166.52dp"
            android:layout_height="52dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="60dp"
            android:background="@drawable/round_blue"
            android:gravity="center"
            android:text="Next Step"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>