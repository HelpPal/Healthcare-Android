                            android:inputType="textCapWords|textCapSentences"
                            android:singleLine="true"
                            android:textColor="@color/appBlue"
                            android:textColorHint="@color/agreementNotHighlighted"
                            android:textSize="18dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="30.31dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical">

                            <ImageView
                                android:id="@+id/termsChecked"
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:src="@drawable/uncheck" />

                            <ImageView
                                android:id="@+id/checkSign"
                                android:layout_width="24.79dp"
                                android:layout_height="20.19dp"
                                android:layout_marginStart="5dp"
                                android:src="@drawable/check_sign"
                                android:visibility="gone" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:orientation="vertical">

                            <com.midnight.healthcare.TextHelvetica
                                android:id="@+id/iHaveRead"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="I have read and agree with the price and"
                                android:textColor="@color/agreementNotHighlighted"
                                android:textSize="16dp" />

                            <com.midnight.healthcare.TextHelvetica
                                android:id="@+id/termsAndConditionsLink"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/terms_and_conditions"
                                android:textColor="@color/blueHighlighted" />

                        </LinearLayout>

                    </LinearLayout>


                    <com.midnight.healthcare.Btn
                        android:id="@+id/next_step_3"
                        android:layout_width="166.52dp"
                        android:layout_height="52dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/round_blue"
                        android:gravity="center"
