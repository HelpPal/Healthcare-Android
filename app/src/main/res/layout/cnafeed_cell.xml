<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E1EFFA" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8FBFE"
        android:orientation="vertical"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cell_image"
                android:layout_width="80.62dp"
                android:layout_height="80.62dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.midnight.healthcare.Text
                    android:id="@+id/cell_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Name"
                    android:textColor="@color/appBlue"
                    android:textSize="24dp" />

                <com.midnight.healthcare.Text
                    android:id="@+id/cell_palce"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="City , State"
                    android:textSize="18dp" />

                <com.midnight.healthcare.Text
                    android:id="@+id/cell_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_blue_text"
                    android:gravity="center"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:singleLine="true"
                    android:text="0.1 mi"
                    android:textColor="@android:color/white"
                    android:textSize="15dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.midnight.healthcare.Text
                    android:id="@+id/cell_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:text="$15-$20"
                    android:textColor="#25B176"
                    android:textSize="20dp" />

                <com.midnight.healthcare.Text
                    android:id="@+id/cell_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:text="Part time"
                    android:textSize="16dp" />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RatingBar
                android:id="@+id/rb"
                style="@style/StarRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:isIndicator="true"
                android:layout_alignBottom="@+id/rating_tv"
                android:layout_alignParentStart="true"
                android:layout_marginStart="90dp" />

            <com.midnight.healthcare.Text
                android:id="@+id/rating_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/rb"
                android:text="4.5"
                android:textColor="@color/blueHighlighted"
                android:textSize="25sp" />
        </RelativeLayout>

        <com.midnight.healthcare.Text
            android:id="@+id/cell_description"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="10dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque bibendum sem eu finibus tempus. Morbi in faucibus nequeâ€¦"
            android:textColor="#6B6B6B"
            android:textSize="15dp" />

        <GridView
            android:id="@+id/skillzzz"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:numColumns="auto_fit"
            android:visibility="gone">

        </GridView>

        <LinearLayout
            android:id="@+id/skill_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E1EFFA" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp" />
</LinearLayout>