                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Accepted!"
                        android:textColor="@android:color/white"
                        android:textSize="18dp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/acceptButtons"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <com.midnight.healthcare.Btn
                        android:id="@+id/accept"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_blue"
                        android:text="Accept"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="18dp" />

                    <com.midnight.healthcare.Btn
                        android:id="@+id/decline"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_blue_light"
                        android:text="Decline"
                        android:textAllCaps="false"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/after_answerTypeZero"
                    android:layout_width="match_parent"
                    android:layout_height="41.6dp"
                    android:visibility="gone">

                    <com.midnight.healthcare.Btn
                        android:id="@+id/sendMessageTypeZero"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_blue"
                        android:clickable="true"
                        android:text="Send a message"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="18dp" />

                    <com.midnight.healthcare.Btn
                        android:id="@+id/optionsButtonTypeZero"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_blue_options"
                        android:text="Options"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="18dp" />
                </LinearLayout>

