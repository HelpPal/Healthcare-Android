                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/cell_image"
                    android:layout_width="90dp"
                    android:layout_height="90dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.midnight.healthcare.Text
                        android:id="@+id/cell_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Name"
                        android:textColor="@color/appBlue"
                        android:textSize="24dp" />

                    <com.midnight.healthcare.Text
                        android:id="@+id/cell_palce"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="City , State"
                        android:textSize="18dp" />

                    <com.midnight.healthcare.Text
                        android:id="@+id/cell_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/round_blue_text"
                        android:gravity="center"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:singleLine="true"
                        android:text="0.1 mi"
                        android:textColor="@android:color/white"
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.midnight.healthcare.Text
                        android:id="@+id/cell_price"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="end"
                        android:text="$15-$20"
                        android:textColor="#25B176"
                        android:textSize="20dp" />

                    <com.midnight.healthcare.Text
                        android:id="@+id/cell_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="end"
                        android:text="Part time"
                        android:textSize="16dp" />
                </LinearLayout>

            </LinearLayout>

            <com.midnight.healthcare.Text
                android:id="@+id/cell_description"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="10dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque bibendum sem eu finibus tempus. Morbi in faucibus neque…"
                android:textColor="@android:color/black"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E1EFFA"></LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <com.midnight.healthcare.Text
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="For your job"

                    />

                <com.midnight.healthcare.Text
                    android:id="@+id/job"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="40dp"
                    android:text="Certified Nursing Assistant - Full Time Days - Kindred Hospital…"
                    android:textColor="@color/appBlue"
                    android:textSize="18dp" />

                <ImageView
