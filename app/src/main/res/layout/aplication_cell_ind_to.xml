                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_blue_white"
                        android:clickable="true"
                        android:text="Declined"
                        android:textAllCaps="false"
                        android:textColor="#FF6262"
                        android:textSize="18dp" />

                    <com.midnight.healthcare.Btn
                        android:id="@+id/optionsButton2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_blue_options"
                        android:text="Options"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="18dp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E1EFFA"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp" />
