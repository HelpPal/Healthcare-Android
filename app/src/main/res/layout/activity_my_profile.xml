<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    tools:context=".Activity.MyProfileActivity">
 <ScrollView
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_alignParentTop="true"
     android:layout_alignParentStart="true">
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent">
         <RelativeLayout
             android:layout_width="55dp"
             android:layout_height="40dp"
             android:id="@+id/exit"
             android:layout_marginTop="21.5dp">
             <Button
                 android:layout_width="33.56dp"
                 android:clickable="false"
                 android:layout_height="21.53dp"
                 android:layout_centerInParent="true"
                 android:background="@drawable/back_arrow"
                 />
         </RelativeLayout>
         <com.midnight.healthcare.Btn
             android:id="@+id/edit_btn"
             android:layout_width="74.52dp"
             android:layout_height="38dp"
             android:text="Edit"
             android:textAllCaps="false"
             android:textColor="@android:color/white"
             android:background="@drawable/round_blue"
             android:layout_marginTop="21dp"
             android:layout_alignParentEnd="true"
             android:layout_marginEnd="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/cna_img"
            android:layout_width="120.62dp"
            android:layout_height="120.62dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"/>
        <com.midnight.healthcare.Text
            android:id="@+id/cna_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="name"
            android:textSize="24dp"
            android:textColor="@color/blueHighlighted"
            android:layout_marginTop="10dp"
            />

        <com.midnight.healthcare.Text
            android:id="@+id/cna_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="gender, age, city , state"
            android:textSize="18dp" />

        <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E1EFFA">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:orientation="horizontal"
        android:padding="20dp"
        android:background="#F8FBFE">

       <com.midnight.healthcare.Text
           android:id="@+id/cna_exp"
           android:textSize="22dp"
           android:textColor="@color/appBlue"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:text="6 years of experience"
           android:layout_weight="1"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1">
    <com.midnight.healthcare.Text
        android:id="@+id/cna_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="$15-$20"
        android:gravity="end"
        android:textSize="20dp"
        android:textColor="#25B176"/>
    <com.midnight.healthcare.Text
        android:id="@+id/cna_time"
        android:textSize="16dp"
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Part time"/>
</LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E1EFFA"/>
        
        
        <com.midnight.healthcare.Text
            android:id="@+id/cna_descritpion"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:padding="20dp"/>
        <LinearLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/skill_container">
        </LinearLayout>
        <Button
            android:visibility="gone"
            android:id="@+id/cna_hire"
            android:layout_marginTop="10dp"
            android:layout_width="202dp"
            android:layout_height="52dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/round_blue"
            android:text="Hire"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:textColor="@android:color/white"/>
        
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
           <com.midnight.healthcare.Text
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Send a message"
               android:textSize="18dp"
               android:textColor="@color/textColor"/> 
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:gravity="start"
                    android:id="@+id/cna_mess"
                    android:layout_width="match_parent"
                    android:layout_height="173dp"
                    android:padding="10dp"
                    android:textSize="18dp"
                    android:textColorHint="@color/textColor"
                    android:textColor="@color/appBlue"
                    android:background="@drawable/round_blue_light"
                    android:hint="Tap here to ask Catherine a
question or leave her a feedback..."/>
                <Button
                    android:id="@+id/cna_send"
                    android:layout_width="75dp"
                    android:layout_height="38dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/round_blue"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
     </RelativeLayout>
 </ScrollView>
</RelativeLayout>
